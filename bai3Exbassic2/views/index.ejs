<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>NodeJs</title>
</head>

<body>


    <main role="main" class="flex-shrink-0">
        <div class="container">
            &nbsp;
            <div class="bd-example">
                <a href="/add">
                    <button class="btn btn-outline-success">Add new single</button>
                </a>
            </div>

            &nbsp;
            <div class="bd-example">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">#</th>
                            <th scope="col" class="text-center">Name</th>
                            <th scope="col" class="text-center">Image</th>
                            <th scope="col" class="text-center">Link</th>
                            <th scope="col" class="text-center">Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                            data.forEach((person)=>{                               
                        %>
                        <tr>
                            <th scope="row" class="text-center"><%- person.id;%></th>
                            <td class="text-center"><%- person.name;%></td>
                            <td class="text-center">
                                <img src="<%- person.image; %>" alt="" style="width: 200px;">
                            </td>
                            <td class="text-center"><a href="<%- person.link; %>">@<%- person.name;%></a></td>
                            <td class="text-center">
                                <div class="bd-example">
                                    <a href="/update/<%- person.id;%>" target="_blank">
                                        <button type="button" class="btn btn-outline-info"
                                            style="width: 100px;">Update</button>
                                    </a>
                                </div>
                                &nbsp;
                                <div class="bd-example">
                                    <a href="/api/<%- person.id;%>">
                                        <button type="button" class="btn btn-outline-warning"
                                            style="width: 100px;">Remove</button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <%
                            });
                    %>
                        %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>




    <script src="//code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>